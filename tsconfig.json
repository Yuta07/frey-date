{
  "compilerOptions": {
    "target": "ES2015",
    "lib": ["dom", "dom.iterable", "esnext"],
    "module": "commonjs",
    "moduleResolution": "node",
    "jsx": "react",
    "outDir": "./dist",
    "strict": true,
    // "allowJs": true,
    // "resolveJsonModule": true,
    // "isolatedModules": true,
    // "noEmit": true,
    "skipLibCheck": true,
    "noImplicitReturns": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*", "src/**/**/*.ts"],
  "exclude": ["node_modules", "src/stories/**/*.stories.tsx", "src/shared/**/*.ts"]
}