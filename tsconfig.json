{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "lib": ["es6", "dom", "es2016", "es2017"],
    "moduleResolution": "node",
    "jsx": "react",
    "outDir": "./dist",
    "strict": true,
    "sourceMap": true,
    "allowJs": false,
    "declaration": true,
    "skipLibCheck": true,
    "noImplicitReturns": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*", "src/**/**/*.ts"],
  "exclude": ["node_modules", "src/stories/**/*.stories.tsx", "src/shared/**/*.ts", "dist"]
}